@inproceedings{galan,
  author    = {Galan, Daniel and Heradio, Ruben and de la Torre, Luis and Dormido, Sebastian and Esquembre, Francisco},
  booktitle = {2016 13th International Conference on Remote Engineering and Virtual Instrumentation (REV)},
  title     = {Automated experiments on EjsS laboratories},
